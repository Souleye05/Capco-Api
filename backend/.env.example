# ==============================================
# CAPCO API - Configuration d'Environnement
# ==============================================

# Base de données PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/capco_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Application
NODE_ENV="development"
PORT=3000
API_PREFIX="api"
API_VERSION="v1"

# Pagination par défaut
DEFAULT_PAGE_LIMIT=20
MAX_PAGE_LIMIT=100

# Audit et Logging
AUDIT_ENABLED=true
AUDIT_SENSITIVE_FIELDS="password,token,secret,key,authorization"
LOG_LEVEL="debug"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_COUNT=100

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS=true

# Sécurité
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this-in-production"

# Upload de fichiers
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DEST="./uploads"

# Email (optionnel)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="CAPCO API <noreply@capco-api.com>"

# Redis (optionnel pour le cache)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Monitoring (optionnel)
SENTRY_DSN=""
PROMETHEUS_ENABLED=false

# Développement uniquement
SWAGGER_ENABLED=true
SWAGGER_PATH="api"

# Tests
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/capco_test_db?schema=public"